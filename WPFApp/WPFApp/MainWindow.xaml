<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        xmlns:viewModel="clr-namespace:WPFApp.MVVM.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="NoResize" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True"
        MouseLeftButtonDown="dragOver">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    
    <Border CornerRadius="10" 
            Background="#14274e">

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="40, 30">
                    <materialDesign:PackIcon Kind="Book"
                                             Foreground="White"
                                             Height="20"
                                             Width="20"
                                             Margin="0,0,10,0"/>
                    <TextBlock Text="App"
                               Foreground="White"
                               FontSize="18"
                               FontFamily="Fonts/#Dosis"
                               FontWeight="Bold"
                               />
                </StackPanel>
                <StackPanel Margin="0,20">

                    <RadioButton Content="Home"
                                 Height="35"
                                 FontSize="12"
                                 FontFamily="Fonts/#Padauk"
                                 FontWeight="ExtraLight"
                                 Foreground="white"
                                 Style="{StaticResource MenuButtonTheme}"
                                 IsChecked="True"
                                 Command="{Binding HomeViewCommand}"/>
                    <RadioButton Content="Upload"
                                 Height="35"
                                 FontSize="12"
                                 FontFamily="Fonts/#Padauk"
                                 FontWeight="ExtraLight"
                                 Foreground="white"
                                 Style="{StaticResource MenuButtonTheme}"/>
                    <RadioButton Content="Download"
                                 Height="35"
                                 FontSize="12"
                                 FontFamily="Fonts/#Padauk"
                                 FontWeight="ExtraLight"
                                 Foreground="white"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding DownloadViewCommand}"/>
                    <RadioButton Content="Logs"
                                 Height="35"
                                 FontSize="12"
                                 FontFamily="Fonts/#Padauk"
                                 FontWeight="ExtraLight"
                                 Foreground="white"
                                 Style="{StaticResource MenuButtonTheme}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="40, 130">
                    <materialDesign:PackIcon Kind="Logout"
                                             Foreground="white"
                                             Height="15"
                                             Width="15"/>
                    <Button x:Name="ButtonLogout" 
                            Content="Logout"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Width="50"
                            Height="20"
                            FontSize="12"
                            FontFamily="Fonts/#Padauk"
                            FontWeight="ExtraLight"
                            Click="ButtonLogout_Click">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="Stroke.Color">
                                            <ColorAnimationUsingKeyFrames.KeyFrames>
                                                <LinearColorKeyFrame Value="#203152"
                                                                     KeyTime="0:0:0.5"/>
                                            </ColorAnimationUsingKeyFrames.KeyFrames>
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </StackPanel>
            </StackPanel>

            <Border Grid.Column="1"
                    CornerRadius="10"
                    Background="#f1f6f9">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="right"
                                Margin="20, 10">
                        <Image Source="Images/profile.png"
                               Height="25"
                               Width="25"
                               Margin="0,0,10,0"/>
                        <TextBlock Text="Peter Jones"
                                   Foreground="#394867"
                                   FontSize="14"
                                   FontFamily="Fonts/#Padauk"
                                   FontWeight="Light"/>
                    </StackPanel>
                    <ContentControl Grid.Row="1"
                                    Margin="10"
                                    Content="{Binding CurrentView}"/>
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>
